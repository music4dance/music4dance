<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Music4Dance: Shall we dance...to music?</title>
    <link rel="shortcut icon" href="~/Content/favicon.ico" />
    @Styles.Render("~/Content/css")
