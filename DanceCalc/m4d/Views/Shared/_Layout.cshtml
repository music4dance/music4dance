<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-logo">
                    <img src="~/Content/header-logo.png" title="music4dance" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dances", "Index", "Home")</li>
                    <li>@Html.ActionLink("Songs", "Index", "Song")</li>
                    <li>@Html.ActionLink("Counter", "Counter", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    @if (User.IsInRole("showDiagnostics"))
                    {
                        <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                    }
                </ul>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    @Html.Partial("_LoginPartial")
                }
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <div class="row">
            <hr />
            <div class="col-md-12">
                <footer>
                    <p>&copy; @DateTime.Now.Year - Music4Dance.net - 
                    @Html.ActionLink("Terms of Service","TermsOfService") - 
                    @Html.ActionLink("Privacy Policy", "PrivacyPolicy")
                    </p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
