@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> @User.Identity.GetUserName() <img src="~/Content/swing-ui.png" alt="User Icon" height="30" width="30" />
                    &nbsp;&nbsp;&nbsp;&nbsp;
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("My Profile", "UserProfile", "Manage")</li>
                    <li>@Html.ActionLink("Account Settings", "Settings", "Manage")</li>
                    <li>@Html.ActionLink("My Songs", "FilterUser", "Song", new { user = @User.Identity.GetUserName() }, null)</li>
                    <li>@Html.ActionLink("My Searches", "Index", "Searches", new { user = @User.Identity.GetUserName() }, null)</li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Sign off</a></li>
                </ul>
            </li>
          </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
         <li>@Html.ActionLink("Sign In", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
         <li class="bg-primary">@Html.ActionLink("Sign Up", "SignUp", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    </ul>
}
