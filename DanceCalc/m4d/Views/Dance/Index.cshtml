@{
    ViewBag.Title = "Dance Styles";
    ViewBag.ShowTempo = false;
}

@model IEnumerable<m4dModels.SongCounts>

<ol class="breadcrumb">
    <li><a href="/">Music4Dance</a></li>
    <li><a href="/Dances">Dances</a></li>
</ol>

@{
    string[] boxes = { "LTN", "SWG", "TNG", "WLZ", "FXT", "MSC" };
}

<div class="row">
    @foreach (string box in boxes)
    {
        var item = Model.FirstOrDefault(m => m.DanceId == box);

        <div class="list-group col-sm-4">
            <h4><span id="@item.DanceName" class="btn btn-info btn-lg dance">@item.DanceName <span id="@item.DanceId" class="badge">@item.SongCount</span></span></h4>
            @{Html.RenderPartial("_DanceList", item.Children);}
        </div>
    }
</div>

<p class="col-md-12">Choose from the dances styles to get more information or click on the number next to the name to get a list of songs that are suitable to dance that dance to.</p>

@{
    string pageScript = "~/Scripts/showdance.js" + Page.ScriptQualifier;
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content(pageScript)" type="text/javascript"></script>
}


