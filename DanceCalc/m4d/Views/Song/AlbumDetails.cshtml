@model m4dModels.AlbumDetails

<div class="display-field">
    @Model.Name
</div>
@if (Model.Track != null)
{
<div class="display-label">
    Track:
</div>
<div class="display-field">
    @Model.Track
</div>
}
@if (Model.Publisher != null)
{
<div class="display-label">
    Publisher:
</div>
<div class="display-field">
    Model.Publisher
</div>
}
@if (User.IsInRole("showDiagnostics") && Model.HasPurchaseInfo)
{
<div class="display-label">
    Purchase: @Model.PurchaseInfo
</div>
}
