<script type="text/html" id="tag-template">
    <span data-bind="foreach: list">
        <span class="label label-music" data-bind="css:'label-' + $parent.nameLower()" style="margin-right: 5px">
            <a role="button" class="tag-text" data-bind="text: tag, attr: {href: url}"></a>
            <a role="button" href="#" class="glyphicon tag-text" data-bind="css:tagClass, click:toggleUser, visible:$root.canEdit" data-show="tooltip" data-original-title="Click to add or remove from your tags"></a>
        </span>
    </span>
    <a role="button" class="label" data-bind="visible:$root.canEdit, css:'label-' + nameLower(), attr:{'data-category':name,'data-danceid':summary.danceId, 'data-original-title':tooltip}" data-toggle="modal" data-show="tooltip" data-placement="top" data-target="#addTags"><span class="glyphicon glyphicon-plus-sign"></span></a>
</script>

<div class="modal fade" id="addTags" tabindex="-1" role="dialog" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form style="margin: 10px">
                    <div class="form-group">
                        <label for="new-tags">Tags:</label>
                        <input type="text" class="form-control" id="new-tags" placehloder="tag1, tag2, tag 3, another tag" data-bind="textInput:newTags"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="addTagsOkay" type="button" class="btn btn-default" data-dismiss="modal">Add Tags</button>
            </div>
        </div>
    </div>
</div>

<div data-bind="template: {name:'tag-template',foreach:song.TagSummary.tagTypes}"></div>
