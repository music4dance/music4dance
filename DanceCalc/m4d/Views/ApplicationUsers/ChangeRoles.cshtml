@model m4dModels.ApplicationUser

@{
    IDictionary<string, Microsoft.AspNet.Identity.EntityFramework.IdentityRole> roles = ViewBag.RoleDictionary;
    
    ViewBag.Title = "ChangeRoles";
}

<h2>ChangeRoles for @Model.UserName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="roles" value="@m4d.Context.DanceMusicContext.EditRole">
                        Editor
                    </label>
                    <label>
                        <input type="checkbox" name="roles" value="@m4d.Context.DanceMusicContext.DiagRole">
                        Diagnostics
                    </label>
                    <label>
                        <input type="checkbox" name="roles" value="@m4d.Context.DanceMusicContext.DbaRole">
                        Database Administrator
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}










