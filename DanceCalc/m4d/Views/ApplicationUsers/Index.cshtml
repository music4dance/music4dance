@foreach (var item in Model.Users.OrderByDescending(u => u.StartDate).ToList())
{
    <tr>
        @*
        <td>
            @Html.DisplayFor(modelItem => item.PasswordHash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecurityStamp)
        </td>
        <td>
