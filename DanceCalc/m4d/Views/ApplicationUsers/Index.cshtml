        <td>
            @Html.DisplayFor(modelItem => item.LockoutEnabled)
        </td>
        <td>
            @Html.ActionLink(item.UserName, "Details", new { id = item.Id })
            @if (AccountController.IsUserActive(item.UserName))
            {
                @: *
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @item.StartDate.ToString("d")
        </td>
        <td>
            @if (item.LastActive == DateTime.Parse("1/1/1900"))
            {
                @:Never
            }
            else
            {
                @item.LastActive.ToString("d")
            }

        </td>
        <td>
            @string.Join(",",Model.GetRoles(item.Id))
        </td>
        <td>
            @string.Join(",",Model.GetLogins(item.Id).Select(l => l.LoginProvider))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailConfirmed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessFailedCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RowCountDefault)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ColumnDefaults)
        </td>
        <td>
            @Html.ActionLink("Change Roles", "ChangeRoles", new { id = item.Id }),
            @Html.ActionLink("List Songs", "FilterUser", "Song", new { user = item.UserName }, null),
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @*
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            *@
        </td>
    </tr>
