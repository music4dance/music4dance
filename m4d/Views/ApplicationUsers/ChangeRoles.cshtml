@model ApplicationUser

@{
    ViewBag.Title = "ChangeRoles";

    var roles = Model.GetRoles(ViewBag.Roles);
}

<h2>ChangeRoles for @Model.UserName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-12">
                <div class="checkbox">
                    @foreach (var role in DanceMusicService.Roles)
                    {
                        var isChecked = roles.Contains(role) ? "checked" : string.Empty;
                        <label>
                            <input type="checkbox" name="roles" value="@role" @isChecked>
                            @role
                        </label>
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}










