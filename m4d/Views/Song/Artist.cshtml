@using m4d.ViewModels
@model m4d.ViewModels.ArtistViewModel

@{
    ViewBag.Title = $"Artist: {Model.Artist}";
    ViewBag.Description = $"Songs for dancing by {Model.Artist}";
    var converterModel = new ObjectConverterModel {Name = "model", Model = Model};
}

<div id="app"></div>

@section Scripts {
    <partial name="_jsonCamelCase" model="@converterModel"/>
    <script src="/client/js/chunk-vendors.js"></script>
    <script src="/client/js/chunk-common.js"></script>
    <script src="/client/js/artist.js"></script>
}

@section Styles {
    <environment exclude="Development">
        <link rel="stylesheet" href="/client/css/chunk-common.css" asp-append-version="true"/>
    </environment>
}