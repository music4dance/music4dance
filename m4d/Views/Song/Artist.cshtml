@using m4d.ViewModels
@model m4d.ViewModels.ArtistViewModel

@{
    ViewBag.Title = $"Artist: {Model.Artist}";
    ViewBag.Description = $"Songs for dancing by {Model.Artist}";
    var converterModel = new ObjectConverterModel
    {
        Name = "model",
        Model = Model
    };
}

<div id="app"></div>

@section Scripts {
    <partial name="_environmentWriter"/>
    <partial name="_jsonCamelCase" model="@converterModel" />
    <script asp-src-include="/client/js/chunk-vendors.*.js"></script>
    <script asp-src-include="/client/js/chunk-common.*.js"></script>
    <script asp-src-include="/client/js/artist.*.js"></script>
}

@section Styles {
    <environment exclude="Development">
        <link rel="stylesheet" href="/client/css/artist.css" asp-append-version="true" />
    </environment>
}