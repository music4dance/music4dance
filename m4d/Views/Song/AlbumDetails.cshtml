@model m4dModels.AlbumDetails

<div class="display-field">
    @if (!string.IsNullOrWhiteSpace(Model.Name))
    {
        @Html.ActionLink(Model.Name, "album", "song", new { title = Model.Name }, null);
    }
</div>
@if (Model.Track != null)
{
    <div class="display-field">
        @Model.FormattedTrack
    </div>
}
@if (Model.Publisher != null)
{
    <div class="display-label">
        Publisher:
    </div>
    <div class="display-field">
        @Model.Publisher
    </div>
}

<partial name="_PurchaseLinks" model="Model.PurchaseLinks"/>

@if (User.IsInRole("showDiagnostics") && Model.HasPurchaseInfo)
{
<div class="display-label">
    Purchase: @Model.PurchaseInfo
</div>
}
