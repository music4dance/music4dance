@model m4d.ViewModels.SongDetailsModel
@using m4d.ViewModels

@{
    ViewBag.Title = Model.Title;
    ViewBag.Description = "music4dance catalog: " + Model.Title + " dance information";
    var converterModel = new ObjectConverterModel
    {
        Name = "model",
        Model = Model
    };
}

<div id="app"></div>

@section Scripts {
    <partial name="_environmentWriter"/>
    <partial name="_jsonCamelCase" model="@converterModel" />
    <script asp-src-include="/client/js/chunk-vendors.*.js"></script>
    <script asp-src-include="/client/js/chunk-common.*.js"></script>
    <script asp-src-include="/client/js/song.*.js"></script>
}

@section Styles {
    <environment exclude="Development">
        <link rel="stylesheet" href="/client/css/details.css" asp-append-version="true" />
    </environment>
}