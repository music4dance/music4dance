@using m4d.ViewModels
@model m4dModels.RawSearch

@{
    ViewBag.Title = "Raw Search";
    ViewBag.BreadCrumbs = BreadCrumbItem.BuildSongLibraryTrail(ViewBag.Title);
}

@using (Html.BeginForm("RawSearch","Song"))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h1>Raw Search</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.SearchText, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SearchText, new { htmlAttributes = new { @class = "form-control wide-text-control" } })
            @Html.ValidationMessageFor(model => model.SearchText, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ODataFilter, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ODataFilter, new { htmlAttributes = new { @class = "form-control wide-text-control" } })
            @Html.ValidationMessageFor(model => model.ODataFilter, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SortFields, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SortFields, new { htmlAttributes = new { @class = "form-control wide-text-control" } })
            @Html.ValidationMessageFor(model => model.SortFields, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SearchFields, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SearchFields, new { htmlAttributes = new { @class = "form-control wide-text-control" } })
            @Html.ValidationMessageFor(model => model.SearchFields, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control wide-text-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CruftFilter, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.CruftFilter)
                @Html.ValidationMessageFor(model => model.CruftFilter, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-check col-md-11 ml-3">
        @Html.EditorFor(model => model.IsLucene, 
            new { htmlAttributes = new { @class = "form-check-input" } })
        @Html.LabelFor(model => model.IsLucene, htmlAttributes:
            new { @class = "form-check-label" })
    </div>

    <div class="form-group mt-2">
        <div class="col-md-offset-2 col-md-10">
            <button id="submit-search" class="btn btn-primary" type="submit">Search <span class="glyphicon glyphicon-search"></span></button>
        </div>
    </div>
</div>
}

@if (ViewData.ContainsKey("AzureIndexInfo"))
{
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead class="big-text">Azure Search Fields</thead>
                <tbody>
                <tr><td>Field</td><td>Datatype</td><td>Searchable</td><td>Sortable</td><td>Filterable</td><td>Facetable</td><td>Retrievable</td></tr>
                @foreach (var field in ViewBag.AzureIndexInfo.Fields)
                {
                    <tr>
                        <td>@field.Name</td>
                        <td>@field.Type</td>
                        <td>@field.IsSearchable</td>
                        <td>@field.IsSortable</td>
                        <td>@field.IsFilterable</td>
                        <td>@field.IsFacetable</td>
                        <td>@field.IsRetrievable</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}
