@model m4d.ViewModels.UserProfile
@using m4d.ViewModels

    @{
        ViewBag.Title = $"Info for {Model.UserName}";
        ViewBag.Description = $"Favorites and song lists for {Model.UserName}";
        var converterModel = new ObjectConverterModel
        {
            Name = "model",
            Model = Model
        };
    }

    <div id="app"></div>

    @section Scripts {
        <partial name="_jsonCamelCase" model="@converterModel" />
        <script asp-src-include="/client/js/chunk-vendors.*.js"></script>
        <script asp-src-include="/client/js/chunk-common.*.js"></script>
        <script asp-src-include="/client/js/user-info.*.js"></script>
    }

    @section Styles {
        <environment exclude="Development">
            <link rel="stylesheet" href="/client/css/chunk-common.css" asp-append-version="true" />
        </environment>
    }