@model m4d.ViewModels.EchoValueModel

@if (Model.Value.HasValue && Model.Value != 0.0f)
{
    var tips = new Dictionary<string, string>
{
        {"Beat", "This song has a beat strength of {0:0.00} on a scale of 0.00 to 1.00 where 1.00 is the strongest beat."},
        {"Mood", "This song has a mood level of {0:0.00} on a scale of 0.00 to 1.00 where 1.00 is the happiest and 0.00 is the saddest."},
        {"Energy", "This song has an energy level of {0:0.00} on a scale of 0.00 to 1.00 where 0.00 is the lowest energy and 1.00 is the highest energy."},
    };

    var dec = (int)Math.Floor(Model.Value.Value * 10) + 1;
    var img = "/images/icons/" + @Model.Type + "-" + dec + ".png";
    var alt = Model.Type;
    var href = "https://music4dance.blog/music4dance-help/playing-or-purchasing-songs/echonest/#" + Model.Type.ToLower();
    <a href="@href">
        <img src="@img" width="@(Model.Size.ToString())" height="@(Model.Size.ToString())" alt="@alt" title="@string.Format(tips[Model.Type], Model.Value)" />
    </a>
    if (Model.Description)
    {
        <span>@Model.Type = @Model.Value.Value.ToString("0.00")</span>
    }
}