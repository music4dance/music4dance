@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["UserName"] = Model.UserName;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<p class="big-text">Welcome @Model.UserName!</p>

<p class="big-text">You have been a member of the music4dance community since @Model.MemberSince.ToString("d").</p>
@if (Model.SubscriptionLevel != SubscriptionLevel.None && Model.SubscriptionStart.HasValue && Model.SubscriptionEnd.HasValue)
{
    <p class="big-text">You have been a premium subscriber to music4dance since @Model.SubscriptionStart.Value.ToString("d").  Your current subscription ends on @Model.SubscriptionEnd.Value.ToString("d").</p>
}

<div class="row">
    <div class="col-md-6">
        <h4>Your Profile Preferences</h4>
        <dl class="dl-horizontal">
            <dt>Region:</dt>
            <dd>@Model.Region</dd>
            <dt>Privacy:</dt>
            <dd>@Model.Privacy</dd>
            <dt>Contact Preferences:</dt>
            <dd>@string.Join(", ", Model.ContactOptions)</dd>
            <dt>Music Streaming<br />and Purchase service<br />preferences:</dt>
            <dd>@string.Join(", ", Model.ServiceOptions)</dd>
        </dl>

