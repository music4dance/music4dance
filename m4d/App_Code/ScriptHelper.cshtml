@using System.Web.Mvc
@using System.Web.Mvc.Html
@using m4dModels

@helper NParameter(ViewDataDictionary viewData, string name)
{
    var id = "param" + name;
    if (!viewData.ContainsKey(id))
    {
        return;
    }
    <script>var @id = viewData[@id];</script>
}

@helper Parameter(ViewDataDictionary viewData, string name)
{
    var id = "param" + name;
    object o;
    if (!viewData.TryGetValue(id, out o))
    {
        return;
    }
    if (o is bool)
    {
        o = ((o as bool?).Value ? "true" : "false");
    }
    <script>window.@id = @o</script>
}
