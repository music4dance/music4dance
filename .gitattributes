# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.cs text eol=crlf
*.cshtml text eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf
*.config text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=crlf
*.txt text eol=crlf
*.ps1 text eol=crlf
*.sh text eol=lf

# TypeScript/JavaScript files in ClientApp use LF (Vue.js convention)
m4d/ClientApp/**/*.ts text eol=lf
m4d/ClientApp/**/*.tsx text eol=lf
m4d/ClientApp/**/*.js text eol=lf
m4d/ClientApp/**/*.jsx text eol=lf
m4d/ClientApp/**/*.vue text eol=lf
m4d/ClientApp/**/*.scss text eol=lf
m4d/ClientApp/**/*.css text eol=lf
m4d/ClientApp/**/*.html text eol=lf
m4d/ClientApp/**/*.json text eol=lf

# Other TypeScript/JavaScript files use CRLF
*.ts text eol=crlf
*.tsx text eol=crlf
*.js text eol=crlf
*.jsx text eol=crlf
*.vue text eol=crlf
*.scss text eol=crlf
*.css text eol=crlf
*.html text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.dll binary
*.exe binary
*.pdb binary
